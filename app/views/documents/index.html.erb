<div id="documents-page" class="py-5 px-4">
  <h1 class="mb-5 text-center">All Documents</h1>

  <% if @documents.any? %>
    <section class="documents-list">
      <% @documents.each do |document| %>
        <article class="document-card" tabindex="0">
          <h2 class="document-type"><%= document.document_type %></h2>
          <% if document.expiration_date.present? %>
            <p class="document-expiration">
              Expiration date:
              <time datetime="<%= document.expiration_date %>">
                <%= document.expiration_date.strftime("%B %d, %Y") %>
              </time>
            </p>
          <% else %>
            <p class="document-expiration no-date">No expiration date set</p>
          <% end %>
        </article>
      <% end %>
    </section>
  <% else %>
    <p class="text-center text-muted">No documents found. Please add one!</p>
  <% end %>

  <div class="text-center mt-5">
    <%= link_to 'New Document', new_document_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>

<style>
  /* Isolated styles for documents page */
  #documents-page {
    max-width: 900px;
    margin: 0 auto;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    color: #222;
  }

  #documents-page h1 {
    font-weight: 700;
    font-size: 2.8rem;
    color: #003f7f;
  }

  /* Document cards container */
  #documents-page .documents-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.8rem;
  }

  /* Each document card */
  #documents-page .document-card {
    background: white;
    border-radius: 0.8rem;
    box-shadow: 0 3px 8px rgb(0 0 0 / 0.07);
    padding: 1.8rem 2rem;
    transition: box-shadow 0.3s ease, transform 0.3s ease;
    cursor: pointer;
    outline-offset: 4px;
  }

  #documents-page .document-card:hover,
  #documents-page .document-card:focus {
    box-shadow: 0 10px 24px rgb(0 0 0 / 0.12);
    transform: translateY(-6px);
    background: #f9faff;
  }

  /* Document type title */
  #documents-page .document-type {
    font-size: 1.3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #0053ba;
    letter-spacing: 0.03em;
  }

  /* Expiration date */
  #documents-page .document-expiration {
    font-size: 1rem;
    color: #555;
    font-weight: 500;
  }

  /* Special case if no expiration date */
  #documents-page .document-expiration.no-date {
    font-style: italic;
    color: #999;
  }

  /* Button styling */
  #documents-page .btn-primary {
    background-image: linear-gradient(135deg, #3a8dff, #0053ba);
    border: none;
    box-shadow: 0 4px 10px rgba(58, 141, 255, 0.45);
    font-weight: 600;
    padding: 0.9rem 2.5rem;
    border-radius: 50px;
    transition: background-image 0.3s ease, box-shadow 0.3s ease;
  }

  #documents-page .btn-primary:hover,
  #documents-page .btn-primary:focus {
    background-image: linear-gradient(135deg, #0053ba, #003f7f);
    box-shadow: 0 6px 16px rgba(0, 63, 127, 0.6);
  }

  /* Animation: fade-in + slide up on cards */
  #documents-page .document-card {
    opacity: 0;
    transform: translateY(20px);
    animation-fill-mode: forwards;
    animation-duration: 0.5s;
  }
  #documents-page .document-card:nth-child(1) { animation-name: fadeSlideUp; animation-delay: 0.15s; }
  #documents-page .document-card:nth-child(2) { animation-name: fadeSlideUp; animation-delay: 0.3s; }
  #documents-page .document-card:nth-child(3) { animation-name: fadeSlideUp; animation-delay: 0.45s; }
  #documents-page .document-card:nth-child(4) { animation-name: fadeSlideUp; animation-delay: 0.6s; }
  #documents-page .document-card:nth-child(5) { animation-name: fadeSlideUp; animation-delay: 0.75s; }
  /* add more if needed */

  @keyframes fadeSlideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Animate cards on DOMContentLoaded
  document.addEventListener("DOMContentLoaded", () => {
    const cards = document.querySelectorAll("#documents-page .document-card");
    cards.forEach(card => {
      card.style.animationPlayState = "running";
    });
  });
</script>
