<section id="faq" class="bg-light py-5">
  <div class="container" style="max-width: 800px;">
    <h2 class="text-center mb-5 fw-bold" style="color: #003f7f; letter-spacing: 0.07em;">Frequently Asked Questions</h2>
    <div class="accordion accordion-flush" id="faqAccordion">
      <% faqs = [
        {id: 1, question: "Is DocTrack free?", answer: "Yes, DocTrack offers a free plan with generous features. Premium upgrades available."},
        {id: 2, question: "Can I upload all types of documents?", answer: "Absolutely. PDF, JPG, PNG, DOCX – we support them all."},
        {id: 3, question: "How do reminders work?", answer: "You’ll get customizable email reminders based on your settings — days or weeks before expiry."}
      ] %>

      <% faqs.each do |faq| %>
        <div class="accordion-item mb-3 rounded-3 shadow-sm border-0">
          <h2 class="accordion-header" id="heading<%= faq[:id] %>">
            <button class="accordion-button collapsed fw-semibold fs-5" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= faq[:id] %>" aria-expanded="false" aria-controls="collapse<%= faq[:id] %>">
              <%= faq[:question] %>
            </button>
          </h2>
          <div id="collapse<%= faq[:id] %>" class="accordion-collapse collapse" aria-labelledby="heading<%= faq[:id] %>" data-bs-parent="#faqAccordion">
            <div class="accordion-body fs-6 text-muted" style="line-height: 1.6;">
              <%= faq[:answer] %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

