<section id="faq" class="bg-light py-5">
  <div class="container" style="max-width: 800px;">
    <h2 class="text-center mb-5 fw-bold" style="color: #003f7f; letter-spacing: 0.07em;">Frequently Asked Questions</h2>
    <div class="accordion accordion-flush" id="faqAccordion">
      <% faqs = [
        {id: 1, question: "What types of documents can I track with DocTrack?", answer: "You can track anything with an expiration date — from passports, ID cards, and driver’s licenses to business contracts, insurance, visas, and more."},
        {id: 2, question: "Will I receive reminders before a document expires?", answer: "Yes! DocTrack sends you customizable reminders via email and notifications well before your documents expire — so you’re always ahead."},
        {id: 3, question: "Is DocTrack secure?", answer: "Absolutely. We use industry-standard encryption to protect your data. Your documents and personal information are stored securely and never shared."},
        {id: 4, question: "Can I sync my reminders with Google Calendar?", answer: "Yes. DocTrack allows you to sync reminders directly to your Google Calendar so you can stay organized across all your tools."},
        {id: 5, question: "Do I need to install anything?", answer: "No download needed. DocTrack is a fully cloud-based web app — just log in from any device and start managing your documents instantly."},
      ] %>

      <% faqs.each do |faq| %>
        <div class="accordion-item mb-3 rounded-3 shadow-sm border-0">
          <h2 class="accordion-header" id="heading<%= faq[:id] %>">
            <button class="accordion-button collapsed fw-semibold fs-5" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= faq[:id] %>" aria-expanded="false" aria-controls="collapse<%= faq[:id] %>">
              <%= faq[:question] %>
            </button>
          </h2>
          <div id="collapse<%= faq[:id] %>" class="accordion-collapse collapse" aria-labelledby="heading<%= faq[:id] %>" data-bs-parent="#faqAccordion">
            <div class="accordion-body fs-6 text-muted" style="line-height: 1.6;">
              <%= faq[:answer] %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

