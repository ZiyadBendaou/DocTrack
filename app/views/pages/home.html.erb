<section class="hero text-white text-center py-5">
  <div class="container">
    <h1 class="hero-title">Stay Ahead of Your Expirations</h1>
    <p class="hero-subtitle">DocTrack ensures you're always notified before important documents expire — from passports to contracts.</p>
    <div class="d-flex justify-content-center">
  <%= link_to "Get Started", new_user_registration_path, class: "btn btn-primary btn-lg px-5 py-3 rounded-pill hero-btn" %>
</div>

  </div>
</section>

<section id="about" class="py-5 bg-white">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6 mb-4 mb-lg-0">
        <%= image_tag("whatisdoctrack.png", class:"img-fluid rounded-4", alt: "whatisdoctrack", loading:"lazy", decoding:"async") %>

      </div>
      <div class="col-lg-6">
        <h2 class="mb-4 fw-bold">What is DocTrack?</h2>
        <p class="fs-5 mb-3">DocTrack is your digital assistant for keeping tabs on crucial document deadlines. Whether you're a freelancer, professional, or business, DocTrack sends timely reminders before anything expires.</p>
        <p class="text-muted">Stay organized, save time, and never miss an important expiration date again.</p>
      </div>
    </div>
  </div>
</section>

<section id="features" class="bg-light py-5">
  <div class="container">
    <h2 class="text-center mb-5 fw-bold">Key Features</h2>
    <div class="row g-4 justify-content-center text-center">
      <% features = [
        { title: "Scan & Auto-Extract Information", icon: ActionController::Base.helpers.image_path("testtest.png"), color: ["#3a8dff", "#0053ba"], desc: "Scan or upload documents — DocTrack detects expiration dates and key info automatically" },
        { title: "Smart Expiration Reminders", icon: ActionController::Base.helpers.image_path("reminders.png"), color: ["#3a8dff", "#0053ba"], color: ["#00b894", "#008e72"], desc: "Get custom alerts before any document expires." },
        { title: "Multi-Document Management",  icon: ActionController::Base.helpers.image_path("documentation.png"), color: ["#ff6b6b", "#c0392b"], desc: "Organize personal and professional documents with tags and notes." },
        { title: "Google Calendar Sync", icon: ActionController::Base.helpers.image_path("googlecalendar.png"), color: ["#4a90e2", "#2a5dab"], desc: "Sync reminders with Google Calendar to stay on track" },
        { title: "Secure Cloud ", icon: ActionController::Base.helpers.image_path("password.png"), color: ["#6c5ce7", "#341f97"], desc: "Encrypted cloud storage, always accessible and protected" },
        { title: "Fully Web-Based Access", icon: ActionController::Base.helpers.image_path("remote-access.png"), color: ["#ffa502", "#e67e22"], desc: "Use DocTrack from any device — no app needed" }
      ] %>

      <% features.each do |f| %>
        <div class="col-md-4 d-flex justify-content-center">
          <div class="card" style="--front-color: <%= f[:color][0] %>; --back-color: <%= f[:color][1] %>;">
            <div class="card-inner">
              <div class="card-front d-flex flex-column align-items-center justify-content-center px-3" style="background-color: var(--front-color); border-color: var(--front-color);">
                <img src="<%= f[:icon] %>" width="64" alt="<%= f[:title] %> icon" class="mb-3" loading="lazy">
                <h5 class="fw-semibold text-white"><%= f[:title] %></h5>
              </div>
              <div class="card-back d-flex align-items-center justify-content-center px-3 text-white fs-6" style="background-color: var(--back-color); border-color: var(--back-color);">
                <%= f[:desc] %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

</section>

