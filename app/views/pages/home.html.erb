<style>
  html, body {
    height: 100%;
    margin: 0;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    background: #f9fbfd;
    color: #333;
  }

  h1, h2 {
    font-family: 'Segoe UI Semibold', sans-serif;
  }

  /* Hero */
  .hero {
    background: linear-gradient(135deg, #3a8dff, #0053ba);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 1rem;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
  }

  /* Hero testo animato leggero */
  .hero-title, .hero-subtitle, .hero-btn {
    opacity: 0;
    transform: translateY(-20px);
    animation-fill-mode: forwards;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    animation: fadeSlideDown 0.7s ease forwards;
    animation-delay: 0.3s;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    margin-top: 1rem;
    margin-bottom: 2.5rem;
    animation: fadeSlideDown 0.7s ease forwards;
    animation-delay: 1s;
  }

  .hero-btn {
    animation: fadeSlideDown 0.7s ease forwards;
    animation-delay: 1.6s;
  }

  @keyframes fadeSlideDown {
    0% {
      opacity: 0;
      transform: translateY(-20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Pulsante */
  .btn-light {
    background-color: #fff;
    color: #0053ba;
    font-weight: 600;
    border-radius: 50rem;
    box-shadow: 0 4px 8px rgb(58 141 255 / 0.25);
    transition: background-color 0.3s ease, color 0.3s ease;
  }
  .btn-light:hover,
  .btn-light:focus {
    background-color: #e7f1ff;
    color: #003f7f;
  }

  /* Cards ombre leggere */
  .card {
    transition: box-shadow 0.3s ease, transform 0.3s ease;
  }
  .card:hover {
    box-shadow: 0 10px 20px rgb(0 0 0 / 0.07);
    transform: translateY(-4px);
  }

  /* Accordion */
  .accordion-button {
    font-weight: 600;
    font-size: 1.1rem;
    color: #0053ba;
    background: #fff;
    border-radius: 0.5rem;
    box-shadow: 0 2px 6px rgb(0 0 0 / 0.05);
    transition: background-color 0.25s ease, box-shadow 0.25s ease;
  }
  .accordion-button:not(.collapsed) {
    background: #3a8dff;
    color: white;
    box-shadow: 0 4px 12px rgb(58 141 255 / 0.3);
  }
  .accordion-button:focus {
    box-shadow: 0 0 0 0.2rem rgba(58,141,255,0.5);
    outline: none;
  }
  .accordion-body {
    background: #f0f6ff;
    border-radius: 0 0 0.5rem 0.5rem;
    color: #333;
    font-size: 1rem;
    line-height: 1.6;
    padding: 1rem 1.5rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.6rem;
    }
    .hero-subtitle {
      font-size: 1.2rem;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Lascio solo fade-in semplice sulle sezioni con class .fade-in per migliorare performance
    const faders = document.querySelectorAll('.fade-in');
    if (faders.length === 0) return;

    const appearOptions = {
      threshold: 0.2,
      rootMargin: "0px 0px -100px 0px"
    };

    const appearOnScroll = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          observer.unobserve(entry.target);
        }
      });
    }, appearOptions);

    faders.forEach(fader => appearOnScroll.observe(fader));
  });
</script>
